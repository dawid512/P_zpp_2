@model P_zpp_2.ViewModels.ForDeparturesViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Departures</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.departures.CompanyID.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.departures.CompanyID.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.departures.DepartureName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.departures.DepartureName)
        </dd>
        @{
            int x = 0;
            foreach (var item in Model.appUsers)
            {
                if (x == 0)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.appUsers)
                    </dt>
                    x++;
                }
                else
                {
                    <dt class="col-sm-2">
                    </dt>
                }
                <dd class="col-sm-10">
                    @Html.Raw(Html.Encode(item.UserName).Replace("\r\n", "<br />\r\n"))
                </dd>
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.departures.DeprtureId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
