@model P_zpp_2.ViewModels.ForDeparturesViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cardlogged">
    <div class="card-header">
        <h2>Szczegóły</h2>

        <div>
            <h4>Działy</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 napis-label">
                    @Html.DisplayNameFor(model => model.departures.CompanyID.CompanyName)
                </dt>
                <dd class="col-sm-10 napis-label">
                    @Html.DisplayFor(model => model.departures.CompanyID.CompanyName)
                </dd>
                <dt class="col-sm-2 napis-label">
                    @Html.DisplayNameFor(model => model.departures.DepartureName)
                </dt>
                <dd class="col-sm-10 napis-label">
                    @Html.DisplayFor(model => model.departures.DepartureName)
                </dd>
                @{
                    int x = 0;
                    foreach (var item in Model.appUsers)
                    {
                        if (x == 0)
                        {
                            <dt class="col-sm-2 napis-label">
                                <a>
                                    @Html.DisplayNameFor(model => model.appUsers)
                                </a>
                            </dt>
                            x++;
                        }
                        else
                        {
                            <dt class="col-sm-2">
                            </dt>
                        }
                        <dd class="col-sm-10 napis-label">
                            @Html.Raw(Html.Encode(item.UserName).Replace("\r\n", "<br />\r\n"))
                        </dd>
                    }
                }
            </dl>
        </div>
        <div>
            <a class=" btn   login_btn napis-label" asp-action="Edit" asp-route-id="@Model.departures.DeprtureId">Edytuj</a>
            <a class=" btn float-md-right  login_btn napis-label" asp-action="Index">Wróć do Listy</a>
        </div>
    </div>
</div>